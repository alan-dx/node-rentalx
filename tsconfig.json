{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                          
     "outDir": "./dist",                              
    "baseUrl": "./src",                            
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
    },                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
